<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"

    >

    <TextView
        android:id="@+id/tvNamaData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:padding="4dp"
        android:text="Nama Data"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivData"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tvNamaData"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvDeskipsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNamaData"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/ivData"
        android:padding="3dp"
        android:text="Deskripsi"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDeskipsi"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/ivData"
        android:padding="3dp"
        android:text="Target"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTarget"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/ivData"
        android:padding="3dp"
        android:text="Harga"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/ivSuka"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvTarget"
        android:layout_marginLeft="207dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/tvHarga"
        android:src="@drawable/ic_suka" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHarga"
        android:orientation="horizontal"
        android:weightSum="2"
        tools:ignore="NotSibling">

        <Button
            android:id="@+id/btUbah"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_bg"
            android:text="Ubah Data"
            android:textAllCaps="false"
            android:textColor="@color/white"
            tools:ignore="Suspicious0dp"

            />

        <Button
            android:id="@+id/btLihatDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_bg"
            android:text="Lihat Detail"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:theme="@style/Button.DarkBlue"
            tools:ignore="Suspicious0dp" />
    </LinearLayout>

</RelativeLayout>